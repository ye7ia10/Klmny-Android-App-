<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phoneNumberAct">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your phone number"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:id="@+id/phoneNum"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:drawableStart="@drawable/phone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Verification Code"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:id="@+id/VerNum"
        android:layout_below="@id/phoneNum"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:visibility="invisible"
        android:drawableStart="@drawable/password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:id="@+id/sendVer"
        android:text="Send Verification Code"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_below="@+id/VerNum"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:id="@+id/verify"
        android:text="Verify"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:layout_below="@+id/sendVer"
        android:visibility="invisible"
        />



</RelativeLayout>